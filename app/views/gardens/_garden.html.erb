<div class="p-5 bg-primary text-dark" style="background-image: url(<%= garden.banner_url%>); background-size: cover; height: 75vh">
  <h1><%= garden.name %></h1>
</div>

<div class="container my-5 row">
  <% @garden.plants.each do |plant| %>
  <div class="d-flex">
    <div class="card mx-3" style="width: 18rem;">
    <img src="<%= plant.image_url %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= plant.name %></h5>
      <%= link_to "Edit Plant", edit_plant_path(@garden), class: "btn btn-warning" %>
    </div>
  </div>
  <% end %>
</div>

</div>